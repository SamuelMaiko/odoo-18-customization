<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_mail_compose_message_form_inherit" model="ir.ui.view">
        <field name="name">mail.compose.message.form.inherit</field>
        <field name="model">mail.compose.message</field>
        <field name="inherit_id" ref="mail.email_compose_message_wizard_form"/>
        <field name="arch" type="xml">
            <!-- Add RFQ-specific note at the very top of the form -->
            <xpath expr="//form" position="inside">
                <div class="alert alert-info oe_text_center"
                     groups="purchase.group_purchase_manager"
                     invisible="not context.get('custom_rfq_mode')"
                     style="margin-bottom: 15px;">
                    <i class="fa fa-info-circle mr-2"/>
                    <strong>Vendor Communication:</strong>
                    This PO will be sent to the main vendor, and RFQs will be sent to all other selected vendors.
                </div>
            </xpath>
        </field>
    </record>
</odoo>