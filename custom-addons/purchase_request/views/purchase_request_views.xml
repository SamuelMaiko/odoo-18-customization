<odoo>
    <record id="view_purchase_request_tree" model="ir.ui.view">
        <field name="name">purchase.request.tree</field>
        <field name="model">purchase.request</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="employee_id"/>
                <field name="date_request"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="view_purchase_request_form" model="ir.ui.view">
        <field name="name">purchase.request.form</field>
        <field name="model">purchase.request</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" readonly="1"/>
                        <field name="employee_id"/>
                        <field name="department_id"/>
                        <field name="date_request"/>
                        <field name="state" readonly="1"/>
                    </group>
                    <notebook>
                        <page string="Purchase Items">
                            <field name="line_ids">
                                <list editable="bottom">
                                    <field name="product_id"/>
                                    <field name="quantity"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <field name="state" widget="statusbar" statusbar_visible="draft,submitted,approved,rfq_created"/>
                    <button name="action_submit" type="object" string="Submit" class="oe_highlight"/>
                    <button name="action_approve" type="object" string="Approve" class="oe_highlight"/>
                    <button name="action_create_rfq" type="object" string="Create RFQ" class="oe_highlight" />
                </footer>
            </form>
        </field>
    </record>

    <menuitem id="menu_purchase_request_root" parent="purchase.menu_purchase_root" name="Purchase Requests" sequence="7" />

    <menuitem id="menu_purchase_request" name="All Requests" parent="menu_purchase_request_root" />
<!--    action="action_purchase_request"-->
</odoo>
